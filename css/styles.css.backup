/* 더보기 버튼 */
.more-menu-btn {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.9);
    border: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
    position: relative;
    will-change: background-color, box-shadow, transform;
    transform: translateZ(0);
    backface-visibility: hidden;
}

.more-menu-btn:hover {
    background-color: rgba(255, 255, 255, 1);
    /* box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1); */
    /* transform: translateZ(0) scale(1.02); */
}

.more-menu-btn:active {
    /* transform: translateZ(0) scale(0.98); */
}

.more-menu-btn .dots {
    display: grid;
    grid-template-columns: repeat(3, 4px);
    grid-template-rows: repeat(3, 4px);
    gap: 3px;
    width: 18px;
    height: 18px;
}

.more-menu-btn .dot {
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: #666;
}

/* 더보기 드롭다운 메뉴 - 최적화 */
.more-menu-dropdown {
    position: absolute;
    top: calc(100% + 10px);
    right: 0;
    width: 340px;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
    border: 1px solid rgba(0, 0, 0, 0.08);
    z-index: 1000;
    padding: 0;
    overflow: hidden;
    opacity: 0;
    visibility: hidden;
    transform: translate3d(0, -10px, 0) scale(0.95);
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.2s cubic-bezier(0.4, 0, 0.2, 1),
                visibility 0.2s ease,
                width 0.25s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: none;
    display: flex;
    will-change: opacity, transform, width;
    backface-visibility: hidden;
    -webkit-font-smoothing: antialiased;
}

/* 드롭다운 확장은 JavaScript로 제어 */
.more-menu-dropdown.expanded {
    width: 540px;
}

.more-menu-dropdown.active {
    opacity: 1;
    visibility: visible;
    transform: translate3d(0, 0, 0) scale(1);
    pointer-events: auto;
}

.more-menu-dropdown-content {
    flex: 1;
    padding: 20px;
}

.more-menu-section {
    margin-bottom: 24px;
}

.more-menu-section:last-child {
    margin-bottom: 0;
}

.more-menu-section-title {
    font-size: 12px;
    font-weight: 600;
    color: #999;
    text-transform: uppercase;
    margin-bottom: 12px;
    letter-spacing: 0.5px;
}

.more-menu-item {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 12px;
    border-radius: 8px;
    cursor: pointer;
    transition: background-color 0.15s ease,
                transform 0.15s ease,
                box-shadow 0.15s ease;
    text-decoration: none;
    color: var(--text-dark);
    min-width: 0;
    will-change: background-color, transform;
    transform: translateZ(0);
    position: relative;
    overflow: hidden;
}

.more-menu-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    width: 3px;
    height: 100%;
    background: #667eea;
    transform: scaleY(0);
    transform-origin: top;
    transition: transform 0.2s ease;
}

.more-menu-item:hover {
    /* 호버 효과 제거 */
}

.more-menu-item.active {
    background-color: rgba(0, 0, 0, 0.06);
}

.more-menu-item.active::before {
    transform: scaleY(1);
}

.more-menu-item-icon {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
}

.more-menu-item-icon i {
    font-size: 18px;
    color: #666;
}

.more-menu-item-content {
    flex: 1;
    min-width: 0;
}

.more-menu-item-title {
    font-size: 14px;
    font-weight: 500;
    color: var(--text-dark);
    margin-bottom: 2px;
    word-break: keep-all;
    overflow-wrap: break-word;
    line-height: 1.4;
}

.more-menu-item-desc {
    font-size: 12px;
    color: #999;
    line-height: 1.4;
}

.more-menu-divider {
    height: 1px;
    background: rgba(0, 0, 0, 0.08);
    margin: 16px 0;
}

/* 언어 설정 */
.language-setting-item {
    position: relative;
}

.language-dropdown-menu {
    width: 200px;
    background: #fafafa;
    border-radius: 12px 0 0 12px;
    border-right: 1px solid rgba(0, 0, 0, 0.08);
    padding: 20px;
    display: none;
    flex-shrink: 0;
    will-change: opacity, transform;
    transform: translate3d(-10px, 0, 0);
    backface-visibility: hidden;
    opacity: 0;
    transition: opacity 0.2s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    pointer-events: auto;
}

.language-dropdown-menu.visible {
    opacity: 1;
    transform: translate3d(0, 0, 0);
}

/* CSS :has() 선택자 제거 - JavaScript로만 제어 */

@keyframes fadeInSlide {
    from {
        opacity: 0;
        transform: translateX(-10px);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.language-option {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 12px 16px;
    cursor: pointer;
    transition: background-color 0.15s cubic-bezier(0.4, 0, 0.2, 1),
                color 0.15s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.15s cubic-bezier(0.4, 0, 0.2, 1);
    font-size: 14px;
    color: var(--text-dark);
    border-radius: 6px;
    margin-bottom: 4px;
    will-change: background-color, color, transform;
    transform: translateZ(0);
    position: relative;
    user-select: none;
}

.language-option::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%) scaleY(0);
    width: 3px;
    height: 60%;
    background: #667eea;
    border-radius: 0 3px 3px 0;
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    transform-origin: center;
}

.language-option:hover {
    background-color: rgba(0, 0, 0, 0.04);
    /* transform 제거로 레이아웃 안정화 */
}

.language-option:hover::before {
    transform: translateY(-50%) scaleY(1);
}

.language-option.active {
    background-color: rgba(102, 126, 234, 0.1);
    color: #667eea;
    font-weight: 500;
}

.language-option.active::before {
    transform: translateY(-50%) scaleY(1);
}

.language-option:active {
    transform: translateX(1px) translateZ(0) scale(0.98);
}

.language-option .fa-check {
    color: #667eea;
    font-size: 12px;
}

.language-option.active .fa-check {
    display: inline-block !important;
}

/* 접근성 개선 */
.sr-only {
    position: absolute;
    left: -10000px;
    width: 1px;
    height: 1px;
    overflow: hidden;
}

/* 포커스 표시 개선 */
.more-menu-btn:focus-visible,
.language-option:focus-visible,
.more-menu-item:focus-visible {
    outline: 2px solid #667eea;
    outline-offset: 2px;
}

/* 모바일 반응형 */
@media (max-width: 768px) {
    .more-menu-dropdown {
        width: 280px;
        right: -10px;
    }
    
    .more-menu-btn {
        width: 36px;
        height: 36px;
    }
    
    .more-menu-btn .dots {
        width: 16px;
        height: 16px;
        gap: 2px;
    }
    
    .more-menu-btn .dot {
        width: 3px;
        height: 3px;
    }
    
    /* 모바일에서 언어 드롭다운 메뉴 최적화 */
    .language-dropdown-menu {
        width: 180px;
        padding: 16px;
    }
    
    .more-menu-dropdown.expanded {
        width: 460px;
    }
}


