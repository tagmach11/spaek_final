/* 비디오 플레이어 섹션 */
.video-player-section {
    width: 100%;
    margin-top: 40px;
}

.video-container-main {
    position: relative;
    width: 100%;
    background: #000;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
}

.video-container-main video {
    width: 100%;
    height: auto;
    display: block;
}

.subtitle-overlay-main {
    position: absolute;
    bottom: 80px;
    left: 0;
    right: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    pointer-events: none;
    z-index: 10;
}

.subtitle-text-main {
    background: rgba(0, 0, 0, 0.75);
    color: #ffffff;
    padding: 12px 24px;
    border-radius: 8px;
    font-size: 1.1rem;
    font-weight: 500;
    text-align: center;
    max-width: 80%;
    line-height: 1.5;
    backdrop-filter: blur(10px);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
    opacity: 0;
    transition: opacity 0.3s ease;
    word-wrap: break-word;
}

/* 실시간 강의 서비스 스타일 */
.live-lecture-container {
    width: 100%;
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
}

.live-lecture-card {
    background: var(--glass-bg);
    backdrop-filter: blur(30px);
    border-radius: 20px;
    padding: 50px 40px;
    text-align: center;
    box-shadow: 0 10px 40px var(--shadow-soft);
    border: 1px solid rgba(255, 255, 255, 0.3);
    margin-bottom: 40px;
}

.live-lecture-icon {
    width: 100px;
    height: 100px;
    margin: 0 auto 30px;
    background: var(--blue);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 8px 24px rgba(33, 150, 243, 0.3);
}

.live-lecture-icon i {
    font-size: 3rem;
    color: white;
}

.live-lecture-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-dark);
    margin-bottom: 15px;
}

.live-lecture-description {
    font-size: 1.1rem;
    color: var(--text-light);
    margin-bottom: 30px;
    line-height: 1.6;
}

.live-lecture-btn {
    padding: 16px 40px;
    background: var(--blue);
    color: white;
    border: none;
    border-radius: 12px;
    font-size: 1.1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    box-shadow: 0 4px 15px rgba(33, 150, 243, 0.3);
}

.live-lecture-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(33, 150, 243, 0.4);
}

.live-lecture-btn:active {
    transform: translateY(0);
}

.live-lecture-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 30px;
    margin-top: 40px;
}

.feature-item {
    background: var(--glass-bg);
    backdrop-filter: blur(30px);
    border-radius: 16px;
    padding: 30px;
    text-align: center;
    box-shadow: 0 4px 20px var(--shadow-soft);
    border: 1px solid rgba(255, 255, 255, 0.3);
    transition: all 0.3s ease;
}

.feature-item:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 30px var(--shadow-medium);
}

.feature-icon {
    width: 70px;
    height: 70px;
    margin: 0 auto 20px;
    background: rgba(33, 150, 243, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.feature-icon i {
    font-size: 2rem;
    color: var(--blue);
}

.feature-item h3 {
    font-size: 1.3rem;
    font-weight: 600;
    color: var(--text-dark);
    margin-bottom: 12px;
}

.feature-item p {
    font-size: 0.95rem;
    color: var(--text-light);
    line-height: 1.6;
}

